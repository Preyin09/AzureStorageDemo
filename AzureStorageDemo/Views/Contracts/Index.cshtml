@model List<AzureStorageDemo.Models.FileItemDto>

<h2>Contract Files</h2>

<form asp-action="Upload" asp-controller="Contracts" method="post" enctype="multipart/form-data">
    <input type="file" name="file" />
    <button type="submit">Upload</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Size (bytes)</th>
            <th>Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var file in Model)
        {
            <tr>
                <td>@file.Name</td>
                <td>@file.ContentLength</td>
                <td>@file.LastModified</td>
            </tr>
        }
    </tbody>
</table>
